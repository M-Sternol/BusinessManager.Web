@model List<BusinessManager.Application.ViewModel.HR.Employee.Contact.EmployeeContactViewModel>
@{
    ViewData["Title"] = "Contact";
}

@for (var i = 0; i < Model.Count; i++)
{
    var contact = Model[i];

    <div class="row">
        <div>
            <h3 class="mb-3">Contact</h3>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@contact.Id" name="Contacts[@i].Id" />

            <div class="form-group">
                <label asp-for="@contact.Email" class="control-label"></label>
                <input asp-for="@contact.Email" class="form-control" id="Email" name="Contacts[@i].Email" />
                <span asp-validation-for="@contact.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@contact.PhoneNumber" class="control-label"></label>
                <input asp-for="@contact.PhoneNumber" class="form-control" id="PhoneNumber" name="Contacts[@i].PhoneNumber" />
                <span asp-validation-for="@contact.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

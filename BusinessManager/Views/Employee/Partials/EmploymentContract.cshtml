@using BusinessManager.Application.ViewModel.HR.Employee.Work.Contract;
@model List<BusinessManager.Application.ViewModel.HR.Employee.Work.Contract.EmploymentContractViewModel>
@{
    ViewData["Title"] = "EmploymentContract";
}

@for (var i = 0; i < Model.Count; i++)
{
    var contract = Model[i];

    <div class="row">
        <div>
            <h3 class="mb-3">Employment Contract</h3>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@contract.Id" name="Employments[@i].Id" />

            <div class="form-group">
                <label asp-for="@contract.Type" class="control-label"></label>
                <select asp-for="@contract.Type" asp-items="Html.GetEnumSelectList<ContractType>()" class="form-control" id="ContractType" name="Employments[@i].Type">
                    <option value="">Select Contract Type</option>
                </select>
                <span asp-validation-for="@contract.Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@contract.DurationMonths" class="control-label"></label>
                <input asp-for="@contract.DurationMonths" class="form-control" id="DurationMonths" name="Employments[@i].DurationMonths" />
                <span asp-validation-for="@contract.DurationMonths" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@contract.Position" class="control-label"></label>
                <input asp-for="@contract.Position" class="form-control" id="Position" name="Employments[@i].Position" />
                <span asp-validation-for="@contract.Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@contract.HourlyRate" class="control-label"></label>
                <input asp-for="@contract.HourlyRate" class="form-control" id="HourlyRate" name="Employments[@i].HourlyRate" />
                <span asp-validation-for="@contract.HourlyRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@contract.MonthlyRate" class="control-label"></label>
                <input asp-for="@contract.MonthlyRate" class="form-control" id="MonthlyRate" name="Employments[@i].MonthlyRate" />
                <span asp-validation-for="@contract.MonthlyRate" class="text-danger"></span>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

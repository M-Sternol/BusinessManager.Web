@model List<BusinessManager.Application.ViewModel.HR.Employee.Contact.EmergencyContactViewModel>
@{
    ViewData["Title"] = "EmergencyContact";
}

@for (var i = 0; i < Model.Count; i++)
{
    var emergencyContact = Model[i];

    <div class="row">
        <div>
            <h3 class="mb-3">Emergency Contact</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@emergencyContact.Id" name="Contacts[@i].Id" />

            <div class="form-group">
                <label asp-for="@emergencyContact.FirstName" class="control-label"></label>
                <input asp-for="@emergencyContact.FirstName" class="form-control" id="FirstName" name="EmergencyContacts[@i].FirstName" />
                <span asp-validation-for="@emergencyContact.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@emergencyContact.LastName" class="control-label"></label>
                <input asp-for="@emergencyContact.LastName" class="form-control" id="FirstName" name="EmergencyContacts[@i].LastName" />
                <span asp-validation-for="@emergencyContact.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@emergencyContact.Relationship" class="control-label"></label>
                <select asp-for="@emergencyContact.Relationship" class="form-control" id="Relationship" name="EmergencyContacts[@i].Relationship">
                    <option value="">Select Relationship</option>
                    <option value="Husband">Husband</option>
                    <option value="Wife">Wife</option>
                    <option value="Parent">Parent</option>
                    <option value="Sibling">Sibling</option>
                </select>
                <span asp-validation-for="@emergencyContact.Relationship" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@emergencyContact.PhoneNumber" class="control-label"></label>
                <input asp-for="@emergencyContact.PhoneNumber" class="form-control" id="PhoneNumber" name="EmergencyContacts[@i].PhoneNumber" />
                <span asp-validation-for="@emergencyContact.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
